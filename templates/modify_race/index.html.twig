{% extends 'base.html.twig' %}

{% block title %}Hello ModifyRaceController!{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %} {# check si l'utilisateur est connect√© #}
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-file-earmark-person" viewBox="0 0 16 16">
                        <path d="M11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                        <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2v9.255S12 12 8 12s-5 1.755-5 1.755V2a1 1 0 0 1 1-1h5.5v2z"/>
                    </svg>
                    {{ app.user.username }}
                {% endif %}
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('index') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('logout') }}">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="formulaire">
        <div class="container">
            <h3>Modify Race</h3>
            <form action="" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Le nom de la race</label>
                    <input required type="text" class="form-control" id="name" name="name" value="{{ race.name }}">
                </div>
                <div class="mb-3">
                    <label for="gallery" class="form-label">L'URL de l'image</label>
                    <input type="text" class="form-control" id="gallery" name="gallery" value="{{ race.gallery }}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">La description</label>
                    <input required type="text" class="form-control" id="description" name="description" value="{{ race.description }}">
                </div>
                <div class="mb-3">
                    <label for="lore" class="form-label">Le lore</label>
                    <input required type="text" class="form-control" id="lore" name="lore" value="{{ race.lore }}">
                </div>
                <div class="mb-3">
                    <label for="in_battle" class="form-label">in_battle</label>
                    <input required type="text" class="form-control" id="in_battle" name="in_battle" value="{{ race.InBattle }}">
                </div>
                <div class="mb-3">
                    <label for="in_campaign" class="form-label">in_campaign</label>
                    <input required type="text" class="form-control" id="in_campaign" name="in_campaign" value="{{ race.InCampaign }}">
                </div>
                <div class="mb-3">
                    <label for="strategy" class="form-label">strategy</label>
                    <input required type="text" class="form-control" id="strategy" name="strategy" value="{{ race.strategy }}" >
                </div>

                <!--Bouton pour valider-->
                <input href="{{ path('index') }}" type="submit" class="btn btn-primary">
            </form>
        </div>
    </div>
{% endblock %}
